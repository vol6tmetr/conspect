<h3 class="text-center mt-3 mb-3">Users list</h3>

<table class="table">
  <thead>
    <tr>
      <th class="text-center" scope="col">Email</th>
      <th colspan="3" class="text-center" scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="text-center" scope="row"><%= user.email %></td>
        <td scope="row"><%= link_to 'Show', user %></td>
        <td scope="row"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td scope="row"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="d-flex justify-content-center">
  <%= paginate @users %>
</div>