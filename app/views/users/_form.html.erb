      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <% if current_user.admin? %>

  <div class="field">
    <%= form.label :admin %>
    <%= form.check_box :admin %>
  </div>

  <div class="field">
    <%= form.label :blocked %>
    <%= form.check_box :blocked %>
  </div>

  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
